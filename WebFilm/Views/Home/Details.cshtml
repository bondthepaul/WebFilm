@model WebFilm.Models.Film

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

 
<div>

    <hr />
    <table>
        <tr><th>Film</th><th></th></tr>
        <tr>
            <td>
                <img src="@Model.Poster" alt="CoverPage" width="120" />
            </td>
            <td>
                <dl class="dl-horizontal">
                    <dt>
                        Tên Film:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Filmname)
                    </dd>

                    <dt>
                        Nhà sản xuất:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Author.Fullname)
                    </dd>               

                    <dt>
                        Đánh giá
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Rating) 
                    </dd>

                    <dt>
                        Năm xuất bản:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ReleaseDay)
                    </dd>       

                    <dt>
                        Thể loại:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Genre.Genrename)
                    </dd>

                </dl>
            </td>
        </tr>
    </table>

</div>
<a class="btn btn-danger" href="/Home/Theater/@Html.DisplayFor(model => model.FilmID)"> <span class="glyphicon glyphicon-shopping-cart"></span> Xem phim </a>
