@model IEnumerable<WebFilm.Models.Packet>

@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div align="center">
    <h2>CÁC GÓI CƯỚC FILM</h2>

    <div class="col-3">
        @foreach (var item in Model)
        {
            <div class="row-cols-md-1 bg-dark text-white">
                <h2>@Html.DisplayFor(modelItem => item.PacketName)</h2>
                <p>@Html.DisplayFor(modelItem => item.Decription)</p>
                <p><a class="btn btn-default bg-danger text-white" href="@Url.Action("Payment2", "Home")">Mua gói @Html.DisplayFor(modelItem => item.Price)đ/tháng &raquo;</a></p>
            </div>

        }

    </div>
</div>